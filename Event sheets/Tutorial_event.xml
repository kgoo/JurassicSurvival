            </conditions>
            <actions>
                <action id="-25" name="Go to layout (by name)" type="System">
                    <param id="0" name="Layout">&quot;Menu&quot;</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
